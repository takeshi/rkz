<table>
  <tr>
    <th>Title</th>
    <th>Contents</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.contents %></td>
    <td><%= post.owner_id %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
  </tr>
<% end %>
</table>

