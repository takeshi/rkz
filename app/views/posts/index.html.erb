<% @posts.each do |post| %>
<div class="row-fluid">
  <div class="span10">
    <h4>
  <%= link_to post.title, post %>

    </h4>
    <blockquote>
      <h6>
        <%= raw post.markdown_contents  %>
      </h6>
    </blockquote>
  </div>
  <div class="pull-right">
    <p> 
      <%= post.updated_at.strftime("%Y-%m-%d %H:%M:%S")%>
    <p>
  </div>
  <!--/span-->
</div>
<hr>
<!--/row-->
<% end %>

<br />
